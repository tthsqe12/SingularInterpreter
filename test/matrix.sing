ring r = 0, (x, y, z), lp;
matrix m[3][4];
m[3, 4] = 1;
ASSUME(0, m[3, 4] == 1);

m[intvec(1,2), intvec(2,3)] = x, y, z, x*y;
ASSUME(0, m[1, 2] == x);
ASSUME(0, m[1, 3] == y);
ASSUME(0, m[2, 2] == z);
ASSUME(0, m[2, 3] == x*y);
ASSUME(0, m[intvec(1,2), intvec(2,3)] == (x, y, z, x*y));

// assignment from singletons

vector v = [x, y, z];
m = v;
ASSUME(0, nrows(m) == 3);
ASSUME(0, ncols(m) == 4);
ASSUME(0, m[1, 1] == x);
ASSUME(0, m[1, 2] == y);
ASSUME(0, m[1, 3] == z);
ASSUME(0, m[3, 4] == 0);

ideal h = ideal(x^2, y^2);
m = h;
ASSUME(0, nrows(m) == 3);
ASSUME(0, ncols(m) == 4);
ASSUME(0, m[1, 1] == h[1]);
ASSUME(0, m[1, 2] == h[2]);
ASSUME(0, m[1, 3] == 0);

m = x + y;
ASSUME(0, nrows(m) == 3);
ASSUME(0, ncols(m) == 4);
ASSUME(0, m[1, 1] == x + y);
ASSUME(0, m[1, 2] == 0);

kill v; intvec v = 1, 2, 3, 4;
m = v;
ASSUME(0, nrows(m) == nrows(v));
ASSUME(0, ncols(m) == 1);
ASSUME(0, m[1, 1] == v[1]);
ASSUME(0, m[nrows(v), 1] == v[nrows(v)]);

kill v; intmat v[2][2] = 1, 2, 3, 4;
m = v;
ASSUME(0, nrows(m) == nrows(v));
ASSUME(0, ncols(m) == nrows(v));
ASSUME(0, m[1, 2] == v[1, 2]);
ASSUME(0, m[2, 1] == v[2, 1]);

kill h; module h = [x,y],[x^2,y^2,z^2];
m = h;
for (int i = 0; i < 2; i++)
{
    ASSUME(0, nrows(m) == 3);
    ASSUME(0, ncols(m) == 2);
    ASSUME(0, m[1, 1] == x);
    ASSUME(0, m[1, 2] == x^2);
    ASSUME(0, m[2, 1] == y);
    ASSUME(0, m[2, 2] == y^2);
    ASSUME(0, m[3, 1] == 0);
    ASSUME(0, m[3, 2] == z^2);
    kill h;
    module h;
    h[1] = [x, y];
    h[2] = [x^2, y^2, z^2];
    kill m;
    matrix m = h;
}

kill m;
matrix m[2][2] = 1, x^3, y, z, x+y^4;

ASSUME(0, size(m) == 4);
ASSUME(0, deg(m) == 3);
