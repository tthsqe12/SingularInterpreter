ring r = 0, (x, y, z), lp;
ideal a = x;
ideal b = x, y, z;
ASSUME(0, typeof(a) == "ideal");
ASSUME(0, typeof(b) == "ideal");
ASSUME(0, size(a) == 1);
ASSUME(0, size(b) == 3);
ASSUME(0, size(ideal(x, y)) == 2);

ideal g = std(ideal(x^2 - y^2, x - y));
ASSUME(0, size(g) == 1);
ASSUME(0, g[1] == x - y);

kill r;
kill basering; // kills a and b too
ring r = (0, a, b), (x, y, z), lp;
ideal i = variables(1);
ASSUME(0, size(i) == 0);
ASSUME(0, i[1] == 0);
i = variables(1 + x^2);
ASSUME(0, size(i) == 1);
ASSUME(0, i[1] == x);
i = variables(a + b + x + y);
ASSUME(0, size(i) == 2);
ASSUME(0, i[1]*i[2] == x*y);
i = variables(ideal(y, z)^2);
ASSUME(0, size(i) == 2);
ASSUME(0, i[1]*i[2] == y*z);

i = x, y, z;
ASSUME(0, ncols(i) == 3);
ASSUME(0, i[1] == x);
ASSUME(0, i[2] == y);
ASSUME(0, i[3] == z);

i = x^2, i, y^2;
ASSUME(0, ncols(i) == 5);
ASSUME(0, i[1] == x^2);
ASSUME(0, i[4] == z);
ASSUME(0, i[5] == y^2);

ideal j = i, a, 1, i;
ASSUME(0, ncols(i) == 5);
ASSUME(0, i[1] == x^2);
ASSUME(0, i[4] == z);
ASSUME(0, i[5] == y^2);
ASSUME(0, ncols(j) == 12);
ASSUME(0, j[1] == x^2);
ASSUME(0, j[2] == x);
ASSUME(0, j[3] == y);
ASSUME(0, j[4] == z);
ASSUME(0, j[5] == y^2);
ASSUME(0, j[6] == a);
ASSUME(0, j[7] == 1);
ASSUME(0, j[8] == j[1]);
ASSUME(0, j[9] == j[2]);
ASSUME(0, j[10] == j[3]);
ASSUME(0, j[11] == j[4]);
ASSUME(0, j[12] == j[5]);

