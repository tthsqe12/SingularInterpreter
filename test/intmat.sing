intmat m[2][2] = 1, 2, 3, 4;

ASSUME(0, m[1, 1] == 1);
ASSUME(0, m[1, 2] == 2);
ASSUME(0, m[2, 1] == 3);
ASSUME(0, m[2, 2] == 4);

m[1, 2] = 7;

ASSUME(0, m[1, 1] == 1);
ASSUME(0, m[1, 2] == 7);
ASSUME(0, m[2, 1] == 3);
ASSUME(0, m[2, 2] == 4);

kill m;

intmat m[3][3] = 1, 2, 3, 4, 5;
ASSUME(0, m[1, 1] == 1);
ASSUME(0, m[1, 2] == 2);
ASSUME(0, m[1, 3] == 3);
ASSUME(0, m[2, 1] == 4);
ASSUME(0, m[2, 2] == 5);
ASSUME(0, m[2, 3] == 0);

m[2..3, 1..2] = 11, 12, 13, 14;
ASSUME(0, m[1, 1] == 1);
ASSUME(0, m[1, 2] == 2);
ASSUME(0, m[1, 3] == 3);
ASSUME(0, m[2, 1] == 11);
ASSUME(0, m[2, 2] == 12);
ASSUME(0, m[2, 3] == 0);
ASSUME(0, m[3, 1] == 13);
ASSUME(0, m[3, 2] == 14);
ASSUME(0, m[3, 3] == 0);

intmat m2[3][3] = -99, 2, 3, 11, -88, 0, 13, 14, -100;
ASSUME(0, m-100 == m2);
ASSUME(0, (m-100)+100 == m);
ASSUME(0, 100+(m-100) == m);

// print
intmat s[2][2] = 1, 2, 3, 4;
ASSUME(0, print(s) == "1, 2," + newline + "3, 4");
ASSUME(0, print(s-1) == "0, 2," + newline + "3, 3");
